{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
      "name": "ninja-clang",
      "inherits": "default",
      "displayName": "Ninja + ClangCL",
      "generator": "Ninja",
      "description": "Build with Ninja and clang-cl",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "vs2026",
      "inherits": "default",
      "displayName": "Visual Studio 2026",
      "description": "Configure with VS 2026",
      "generator": "Visual Studio 18 2026",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs2022",
      "inherits": "default",
      "displayName": "Visual Studio 2022",
      "description": "Configure with VS 2022",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "ninja-msvc",
      "inherits": "default",
      "displayName": "Ninja with MSVC",
      "description": "Configure with Ninja using MSVC compiler",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2026-debug",
      "configurePreset": "vs2026",
      "displayName": "Build Debug",
      "configuration": "Debug"
    },
    {
      "name": "vs2026-release",
      "configurePreset": "vs2026",
      "displayName": "Build Release",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "configurePreset": "vs2022",
      "displayName": "Build Debug",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "configurePreset": "vs2022",
      "displayName": "Build Release",
      "configuration": "Release"
    }
  ]
}


    {
      "name": "vs2026-clang",
      "inherits": "default",
      "displayName": "Visual Studio 2026 + ClangCL",
      "generator": "Visual Studio 18 2026",
      "description": "Configure with VS 2026 and ClangCL toolset",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "toolset": "ClangCL",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2026-clang-debug",
      "configurePreset": "vs2026-clang",
      "displayName": "Build Debug",
      "configuration": "Debug"
    },
    {
      "name": "vs2026-clang-release",
      "configurePreset": "vs2026-clang",
      "displayName": "Build Release",
      "configuration": "Release"
    }
  ]
}
