{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸš€ First Time Setup",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Initialize GUI Submodule",
                "Install GUI Dependencies",
                "Configure CMake (Plugin)",
                "Build Plugin",
                "Start GUI Dev Server"
            ],
            "command": "echo",
            "args": [
                "Starting first time setup..."
            ]
        },
        {
            "label": "Initialize GUI Submodule",
            "type": "shell",
            "command": "git",
            "args": [
                "submodule",
                "update",
                "--init",
                "--recursive"
            ]
        },
        {
            "label": "Install GUI Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¨ GUI (Vue.js)}"
            }
        },
        {
            "label": "Configure CMake (Plugin)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "ninja-clang"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            }
        },
        {
            "label": "Build Plugin",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            }
        },
        {
            "label": "Start GUI Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¨ GUI (Vue.js)}"
            },
            "isBackground": true
        }
    ]
}