{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸš€ First Time Setup",
            "detail": "Initialize GUI submodule, install dependencies, configure CMake, build plugin, and start dev server",
            "type": "shell",
            "command": "echo",
            "args": [
                "Starting first time setup..."
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Initialize GUI Submodule",
                "Install GUI Dependencies",
                "Configure CMake",
                "Build Plugin",
                "Start GUI Dev Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Initialize GUI Submodule",
            "detail": "Initialize and update the GUI git submodule",
            "type": "shell",
            "command": "git",
            "args": [
                "submodule",
                "update",
                "--init",
                "--recursive"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "problemMatcher": []
        },
        {
            "label": "Install GUI Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¨ GUI (Vue.js)}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start GUI Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../gui"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE.*ready in",
                    "endsPattern": "Local:.*http"
                }
            }
        },
        {
            "label": "Build GUI",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../gui"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Visual Studio 18 2026",
                "-A",
                "x64"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Plugin",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Incremental)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Clean Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--clean-first"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Standalone",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Pamplejuce_Standalone"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build VST3",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Pamplejuce_VST3"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build AU",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Pamplejuce_AU"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Tests"
            ],
            "options": {
                "cwd": "${workspaceFolder:ðŸŽ¸ Plugin (JUCE)}"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}