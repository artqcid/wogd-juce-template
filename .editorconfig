# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files
[*.{cpp,h,hpp,cc,cxx}]
indent_style = space
indent_size = 4

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# JavaScript, TypeScript, Vue
[*.{js,ts,vue,json,jsonc}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# PowerShell
[*.ps1]
indent_style = space
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab
